{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es5",
		"lib": [
			"es2015"
		],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"declaration": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": [
		"src"
	]
}
